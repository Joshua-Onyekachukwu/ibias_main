    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.3.1",
    "sass": "^1.87.0",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
